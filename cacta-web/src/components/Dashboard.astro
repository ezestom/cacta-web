---
import { Image } from "astro:assets";
import repeat from "../icons/repeat.svg";
import sustentability from "../icons/sustentability.svg";
import report from "../icons/report.svg";
---

<article class="article">
	<div class="body">
		<div class="flex justify-center items-center">
			<Image class="w-16 pb-5 opacity-10" src={repeat} alt="check" />
		</div>
		<header>
			<h2>Automated data capturing</h2>
		</header>
		<hr />
		<p>~ No more manual processes</p>
		<p>~ Granular and accurate data collection</p>
		<p>~ Leverage already generated data</p>
	</div>

	<div class="body">
		<div class="flex justify-center items-center">
			<Image
				class="w-16 pb-5 opacity-10"
				src={sustentability}
				alt="check"
			/>
		</div>
		<header>
			<h2>Full sustainability management</h2>
		</header>
		<hr />
		<p>~ Full sustainability calculation</p>
		<p>~ Centralization of ESG data</p>
		<p>~ Tracking of ESG initiatives</p>
	</div>

	<div class="body">
		<div class="flex justify-center items-center">
			<Image class="w-16 pb-5 opacity-10" src={report} alt="check" />
		</div>
		<header>
			<h2>Dashboards and Reports</h2>
		</header>
		<hr />
		<p>~ Reports generation</p>
		<p>~ High level of detail</p>
		<p>~ +20 pre-designed dashboards</p>
	</div>
</article>
<style>
	@layer demo.support {
		:root {
			--text-1: #63e;
			--text-2: hsl(0 0% 0% / 0.7);
			--text-3: hsl(0 0% 0% / 0.5);
		}

		.article {
			display: flex;
			align-items: start;
			justify-content: space-between;
			gap: 2rem;
			justify-items: center;
			margin-top: 10rem;
			padding: 2rem;
			border-radius: 1rem;
			background: hsl(0 0% 0% / 0.03);
			flex-wrap: wrap;
		}
		.body {
			min-width: 250px;
		}

		header {
			display: grid;
			color: var(--text-1);
			font-size: 1.5rem;
			font-weight: bold;
		}

		hr {
			height: 2px;
			width: 10ch;
			border: none;
			background: LinkText;
			background: linear-gradient(
					to bottom right in oklab,
					oklch(70% 0.5 340),
					oklch(90% 0.5 200)
				)
				fixed;
		}

		p {
			max-inline-size: 40ch;
			text-wrap: pretty;
			color: var(--text-2);
			font-size: 1rem;
			font-weight: 500;
		}

		h2 {
			text-wrap: balance;
		}

		footer {
			color: var(--text-3);
		}
	}
</style>
