---
import { Image } from "astro:assets";
import { Counter } from "../components/Counter/Counter";
import users from "../icons/users.svg";
import chart from "../icons/chart.svg";
import valued from "../icons/valued.svg";
---

<section>
	<div class="flex items-center justify-center gap-2">
		<Image src={users} alt="Clients" class="w-24 opacity-10" height="100" />
		<Counter
			client:visible
			initialValue={2345}
			speed={20000}
			children="+"
			text="Clients"
		/>
	</div>
	<div class="flex items-center justify-center gap-2">
		<Image src={chart} alt="Clients" class="w-24 opacity-10" height="100" />
		<Counter
			client:visible
			initialValue={25500}
			speed={20000}
			children="$"
			text="Investment"
		/>
	</div>
	<div class="flex items-center justify-center gap-2">
		<Image
			src={valued}
			alt="Clients"
			class="w-24 opacity-10"
			height="100"
		/>
		<Counter
			client:visible
			initialValue={45504}
			speed={20000}
			children="$"
			text="Valued"
		/>
	</div>
</section>

<style>
	section {
		max-width: 80%;
		margin: auto;
		display: flex;
		justify-content: space-between;
		padding: 2rem;
		border-radius: 1rem;
		flex-wrap: wrap;
		background: var(--green-50);
		box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
		border-bottom: 1px solid var(--border-line);
		margin-top: 5rem;
	}

	@media (width < 1000px) {
		section {
			padding: 1rem 3rem;
			max-width: 95vw;
			margin: 1rem auto 0 auto;
			flex-direction: column;
		}
	}
</style>
