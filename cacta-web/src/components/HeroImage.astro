---
import { Image } from "astro:assets";
import mobile from "../img/app-mobile.png";
---

<article class="flex justify-center">
	<Image src={mobile} alt="mobile" alt="mobile-image" class="mobile" />
</article>

<style>
	@media (width < 1200px) {
		article {
			width: 98%;
			justify-content: start;
		}
		.img-mobile {
			transform: translate(3rem, 0);
		}
	}
	.mobile {
		max-width: 75%;
		rotate: 10deg;
		animation: rotate-mobile linear both;
		animation-timeline: scroll(root);
		animation-range: 0 800px;
	}

	@keyframes rotate-mobile {
		to {
			rotate: 0deg;
			max-width: 50%;
		}
	}
</style>
